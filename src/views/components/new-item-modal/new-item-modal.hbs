<div class="int-new-item-modal-container">
    <div class="int-new-item-modal">
        <span class="int-new-item-modal__cross"></span>
        <h2 class="int-new-item-modal-container__heading">Write your comment</h2>

        <form action="" class="int-new-item-modal__form int-flex">
            <label for="tags">Tags</label>
            <input type="text" id="tags" placeholder="tag1, tag2...">
            <label for="comment">Comment text</label>
            <textarea rows="5" id="comment" placeholder="input your comment"></textarea>
            <div class="int-flex">
                <input type="submit" class="int-new-item-modal__btn" >
                <input type="reset" class="int-new-item-modal__btn" >
            </div>

        </form>
    </div>
</div>

